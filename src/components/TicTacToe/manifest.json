{
  "displayName": "TicTacToe",
  "defaultWidth": 150,
  "defaultHeight": 150,
  "components": "./index.js",
  "icon": "./Tic-Tac-Toe.png",
  "resizeX": true,
  "resizeY": true,
  "props": [
    {
      "name": "rows",
      "displayName": "Rows",
      "type": "number",
      "default": "3"
    },
    {
      "name": "columns",
      "displayName": "Columns",
      "type": "number",
      "default": "3"
    },
    {
      "name": "fontSize",
      "displayName": "Font Size",
      "type": "number",
      "default": "16"
    },
    {
        "name": "displayData",
        "displayName": "Display Collection, \n must have 'row, column and value' rows \n leave empty for uncontrolled behavior",
        "type": "list",
        "listControl": {"sort": false, "limit": true }
    },
    {
        "name": "onCreate",
        "displayName": "Create action on your Collection \n leave empty for uncontrolled behavior",
        "type": "action",
        "arguments": [
          {
            "type": "number",
            "displayName" : "row"
          },
          {
            "type": "number",
            "displayName" : "column"
          },
          {
            "type": "number",
            "displayName" : "value"
          }
        ]
    }
  ],
  "childComponents": [
     {
       "name": "cell",
       "displayName": "Cells",
       "role": "listItem",
       "type": "list",
       "reference": "displayData",
       "props": [
         {
           "name": "row",
           "displayName": "Row field",
           "type": "number"
         },
         {
           "name": "column",
           "displayName": "Column field",
           "type": "number"
         },
         {
           "name": "value",
           "displayName": "X or O",
           "type": "text",
           "default": ""
         }
       ]
     }
  ]
}
